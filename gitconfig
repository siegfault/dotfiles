[color]
ui = true

[color "branch"]
current = yellow reverse
local = yellow
remote = green

[color "diff"]
frag = magenta
old = red
new = green

[color "status"]
added = yellow
changed = green
untracked = cyan

[color "diff"]
whitespace = red reverse

[alias]
s = status
b = branch
co = checkout
d = diff --check
dom = diff master
cm = commit
ca = commit -a
cp = cherry-pick
fo = fetch origin
po = push origin HEAD
p = pull
mer = pull origin master
ss = stash save
sl = stash list
sp = stash pop
sa = stash apply
sdi = stash show -p
sdr = stash drop
subm = submodule update --init --recursive
sshow = "!f() { git stash show stash^{/$*} -p; }; f"
sapply = "!f() { git stash apply stash^{/$*}; }; f"

