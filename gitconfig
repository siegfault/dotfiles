[color]
ui = true

[color "branch"]
current = yellow reverse
local = yellow
remote = green

[color "diff"]
frag = magenta bold
old = red bold
new = green bold

[color "status"]
added = yellow
changed = green
untracked = cyan

[color "diff"]
whitespace = red reverse
meta = 227
commit = 227 bold

[alias]
s = status
b = branch
co = checkout
cob = checkout -b
d = diff --check
dom = diff master
cm = commit -v
ca = commit -av
cp = cherry-pick
fo = fetch origin
po = push -u origin HEAD
p = pull
mer = pull origin master
ss = stash save
sl = stash list
sp = stash pop
sa = stash apply
sdi = stash show -p
sdr = stash drop
subm = submodule update --init --recursive
sshow = "!f() { git stash show stash^{/$*} -p; }; f"
sapply = "!f() { git stash apply stash^{/$*}; }; f"
patch = !git --no-pager diff

